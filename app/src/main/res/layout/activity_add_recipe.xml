<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".AddRecipeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:textColor="@color/black"
        android:fontFamily="@font/hensa"
        android:text="Dodaj nowy przepis"
        android:textSize="35dp"/>

    <LinearLayout
        android:id="@+id/imgLayout"
        android:layout_marginTop="65dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#8D1B1B">

        <ImageView
            android:id="@+id/addImgIV"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/white"
            android:layout_margin="7dp"
            android:src="@drawable/add_img"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/imgLayout"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nazwa:"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Porcja:"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/portionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Przygotowanie:"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/preparationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Składnik:"
            android:textSize="25sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/addIngredientIB"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:background="#00FFFFFF"
                android:src="@drawable/ic_add"/>
            <EditText
                android:id="@+id/ingredientName"
                android:layout_width="150dp"
                android:hint="Np. mąka"
                android:layout_weight="1"
                android:layout_marginEnd="30dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/ingredientCapacity"
                android:layout_width="150dp"
                android:hint="np. 250g"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Dodane składniki:"
            android:textSize="25sp"/>

        <ListView
            android:layout_width="match_parent"
            android:id="@+id/ingredientsListView"
            android:layout_height="wrap_content">

        </ListView>

        <Button
            android:id="@+id/addRecipeBtn"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="Dodaj przepis"
            android:textSize="30sp"
            android:fontFamily="@font/hensa"
            android:background="@drawable/label"
            />
    </LinearLayout>

</RelativeLayout>