<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cookbook.android.cookbook">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/cupcake_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/cupcake_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.Menu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.RecipeActivity"></activity>
        <activity android:name=".activities.RecipesListActivity" />
        <activity android:name=".activities.ProductsList"/>
    </application>

</manifest>